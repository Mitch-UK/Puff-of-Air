<div class="header-container">
  <div class="header">
    <header
      class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom"
    >
      <a
        href="/"
        class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none"
      >
        <img
          class="me-2"
          width="70"
          height="70"
          src="/icons/topWeatherIcon.svg"
          alt="Weather Hub Logo"
        />
        <span class="fs-4">Weather Hub</span>
      </a>

      <ul class="nav nav-pills">
        <li class="nav-item">
          <a
            href="/"
            class="nav-link <%= currentPage === 'home' ? 'active' : '' %>"
            aria-current="<%= currentPage === 'home' ? 'page' : '' %>"
            >Home</a
          >
        </li>
        <li class="nav-item">
          <a
            href="/news"
            class="nav-link <%= currentPage === 'news' ? 'active' : '' %>"
            aria-current="<%= currentPage === 'news' ? 'page' : '' %>"
            >News</a
          >
        </li>
        <li class="nav-item">
          <a
            href="/faqs"
            class="nav-link <%= currentPage === 'faqs' ? 'active' : '' %>"
            aria-current="<%= currentPage === 'faqs' ? 'page' : '' %>"
            >FAQs</a
          >
        </li>
        <li class="nav-item">
          <a
            href="/about"
            class="nav-link <%= currentPage === 'about' ? 'active' : '' %>"
            aria-current="<%= currentPage === 'about' ? 'page' : '' %>"
            >About</a
          >
        </li>
      </ul>
    </header>
  </div>
</div>
